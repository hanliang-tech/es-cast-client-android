<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="horizontal">    <Button        android:id="@+id/btn_ping_device"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:onClick="onButtonClick"        android:text="ping设备" />    <Button        android:id="@+id/btn_set_volume_up"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:onClick="onButtonClick"        android:text="音量+" />    <Button        android:id="@+id/btn_set_volume_down"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:onClick="onButtonClick"        android:text="音量-" /></LinearLayout>